<%  var count=1;requests.forEach(function(reqs){ %>

<div class="card">
  <h1>REQUEST <%=count%></h1>
  <h2>TYPE: <%=reqs.type%></h2>
  <p>SLOT <%=reqs.slot%></p>
  <p>DATE <%=reqs.date%></p>
  <p>CAPACITY <%=reqs.cap%></p>
  <p>STATUS <%=reqs.status%></p>
  <p><button onclick="    $(this).closest('.card').remove();">Cancel</button></p>
</div>
<div class="gap">

</div>

<% count+=1 } ); %>

