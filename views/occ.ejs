   x+= " </div><div class='row'>"
 }
     var s = avail.availability[day.value];
     if (s[slot.value] == '1') {
     addClass(avail.roomid); }
     count+=1
});
r.innerText=x;

}
function addClass(x){
var ele= document.getElementById(x);
ele.classList.add("occupied");
updateSelectedCount();
}

</script>

