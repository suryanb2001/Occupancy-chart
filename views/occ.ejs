  const selectedSeatsCount = selectedSeats.length;
  count.innerText = selectedSeatsCount;
  var x = (selectedSeatsCount/24)*100;
rate.innerText = x.toPrecision(2)+" %";
}
 var room =<%- JSON.stringify( rooms) %>;
